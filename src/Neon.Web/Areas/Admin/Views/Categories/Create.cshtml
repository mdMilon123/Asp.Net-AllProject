@model Neon.Web.Areas.Admin.Models.CategoryModels.CategoryCreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-area="Admin" asp-controller="Categories" asp-action="Create" asp-antiforgery="true">
                    <div class="form-group">
                        <label class="form-label" asp-for="Title">Title</label>
                        <input type="text" class="form-control form-control-sm" asp-for="Title"/>
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="Description">Description</label>
                        <textarea class="form-control form-control-sm" rows="5" asp-for="Description"></textarea>
                    </div>
                    <button class="btn btn-outline-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

